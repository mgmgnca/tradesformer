{
    "data_processing": {
        "indicator": {
            "sma_fast_period": 50,
            "sma_mid_period": 100,
            "sma_slow_period" : 200,
            "atr_period": 14,
            "rsi_period": 14,
            "macd_fast_period": 12,
            "macd_slow_period": 26,
            "macd_signal_period": 9,
            "adx_period": 14,
            "stoch_period": 14
        },
        "sequence_length": 100,
        "required_cols": ["time","open", "high", "low", "close"], 
        "scale_cols": ["macd", "rsi_30", "atr", "dx_30"],
        "min_bars_per_week": 1440,
        "train_eval_split": {
            "eval_criteria": ["nan", "zero"],
            "base_path": "/content/drive/MyDrive/data/split/{symbol}",
            "train_dir": "train",
            "eval_dir": "eval"
        },
        "temporal_features": {
            "session_hours": {
                "london": [8, 16],
                "new_york": [13, 21]
            },
            "cyclical_encoding": {
                "minute_blocks": 12,
                "hour_range": 24
            }
        }
    },    
    "env": {
        "indicator_period": 48,
        "observation_list": [
            "mean_std_open", "mean_std_high", "mean_std_low", "mean_std_close",
            "hour_sin", "hour_cos", 
            "minute_sin", "minute_cos",
            "london_session", "ny_session","overlap_session",
            "macd", "boll_ub", "boll_lb",
            "rsi_30", "atr", "volatility_ratio",
            "close_30_sma", "close_60_sma",
            "returns_5", "returns_24"
        ],
        "features_scaled":  [
            "fast_ts",
            "mid_ts",
            "slow_ts",
            "fast_mid_gap",
            "mid_slow_gap",
            "fast_slow_gap",

            "atr_norm",
            "momentum_score",
            "return_5"


        ],
        "features_unscaled": [
            "hour_sin", 
            "hour_cos", 
            "london_session", 
            "ny_session", 
            "overlap_session", 
            "fast_td",
            "mid_td",
            "slow_td",

            "vol_low",
            "vol_med",
            "vol_high",
            "mom_bearish",
            "mom_neutral",
            "mom_bullish",

            "pre_news",
            "post_news"
            
        ],
        "features_filter": ["mid_ma", "slow_ma"],
        "action_threshold": 0.5,
        "over_night_cash_penalty": 5,
        "balance": 10000,
        "symbol_col": "symbol", 
        "time_col": "time",
        "random_start": true,
        "log_filename": "/content/drive/MyDrive/data/log/log_{symbol}",
        "do_nothing": 0.1,
        "title":"{symbol} 5M weekly",
        "description":"sma, rsi and boll input in weekly with {symbol}",
        "shaping_reward": 0.1,
        "forward_window": 12,
        "backward_window": 96, 
        "good_position_reward_scale": 0.01,
        "trailing_stop_distance_points": 200,
        "drawdown_penalty_factor": 10,
        "margin_requirement": 100,
        "consistency_reward" : 0.01,
        "max_consistency" : 12
    },
